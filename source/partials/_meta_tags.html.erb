<meta charset="utf-8">
<title><%= page_title(title) %></title>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes" />
<meta name="description" content="<%= meta_description(slug) %>" />

<%# OpenGraph Meta Tags %>
<meta property="fb:app_id" content="<%= facebook_app_id %>" />
<meta property="og:site_name" content="The Verge" />
<meta property="og:type" content="website" />
<meta property="og:title" content="<%= page_title(title) %>" />
<meta property="og:image" content="<%= image_path("/images/verge-50-cover.jpg") %>" />
<meta property="og:description" content="<%= meta_description(slug) %>" />
<meta property="og:url" content="<%= absolute_page_url(slug) %>" />

<%# Twitter Card Meta Tags %>
<meta name="twitter:site" content="@<%= twitter %>" />
<meta property="twitter:account_id" content="<%= twitter_account_id %>" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content="<%= absolute_page_url(slug) %>" />
<meta name="twitter:title" content="<%= page_title(title) %>" />
<meta name="twitter:description" content="<%= meta_description(slug) %>" />
<meta name="twitter:image:src" content="<%= image_path("/images/verge-50-cover.jpg") %>" />
<meta name="twitter:image:width" content="1200" />
<meta name="twitter:image:height" content="630" />

<link rel="shortcut icon" href="http://cdn0.sbnation.com/images/verge/favicon.vc44a54f.ico" />
<link rel="apple-touch-icon" href="/images/verge/apple-touch-icon.png" />
<link rel="image_src" href="<%= image_path("/images/verge-50-cover.jpg") %>" />

<meta name="google-site-verification" content="TYyhlycNMOtUSht2aoB7heWTK8m-H45_YJizKavkO8s" />
<meta name="google-site-verification" content="IucFf_TKtbFFH8_YeFyEteQIwYPdANM1R46_U9DpAr4" />
<meta name="google-site-verification" content="tDoQLOfV4VmPZrTuSNDQnSyTfhgDRlOMaXgYQ0Bb9Bc" />
<meta name="msvalidate.01" content="D385D0326A3AE144205C298DB34B4E94" />
<meta name="y_key" content="0184e2558f89b639" />
<link rel="canonical" href="<%= absolute_page_url %>" />
